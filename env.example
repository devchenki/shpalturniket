# Shaplych Monitoring System - Environment Variables Example
# Скопируйте этот файл в .env и настройте под ваши нужды

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# База данных
DATABASE_URL=sqlite:///./shaplych_monitoring.db
# Для PostgreSQL: postgresql://user:password@localhost:5432/shaplych
# Для MySQL: mysql://user:password@localhost:3306/shaplych

# Секретный ключ для JWT токенов (сгенерируйте случайную строку)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Режим отладки
DEBUG=true

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Порт для backend сервера
PORT=8771

# Хост для backend сервера
HOST=127.0.0.1

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# URL API для frontend
VITE_API_URL=http://127.0.0.1:8771/api

# Название приложения
VITE_APP_TITLE=Shaplych Monitoring System

# Версия приложения
VITE_APP_VERSION=1.0.0

# Режим разработки
VITE_DEV_MODE=true

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================

# Токен Telegram бота (получите у @BotFather)
TELEGRAM_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Chat ID для уведомлений (через запятую)
TELEGRAM_CHAT_IDS=123456789,987654321

# Время подключения для ping проверок (в миллисекундах)
TELEGRAM_TIME_CONNECT=50

# =============================================================================
# REDIS CONFIGURATION (опционально)
# =============================================================================

# URL Redis сервера для кэширования
REDIS_URL=redis://localhost:6379

# Пароль Redis (если требуется)
REDIS_PASSWORD=

# База данных Redis
REDIS_DB=0

# =============================================================================
# EMAIL CONFIGURATION (опционально)
# =============================================================================

# SMTP сервер для email уведомлений
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Email для отправки уведомлений
EMAIL_FROM=noreply@shaplych.com
EMAIL_TO=admin@shaplych.com

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS origins (через запятую)
CORS_ORIGINS=http://localhost:5181,http://127.0.0.1:5181

# JWT токен время жизни (в минутах)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate limiting (запросов в минуту)
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Prometheus метрики
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Health check интервал (в секундах)
HEALTH_CHECK_INTERVAL=30

# Ping timeout (в секундах)
PING_TIMEOUT=5

# Ping interval (в секундах)
PING_INTERVAL=60

# =============================================================================
# FILE PATHS
# =============================================================================

# Путь к файлу конфигурации бота
BOT_CONFIG_PATH=./config.json

# Путь к файлу списка IP адресов
IP_LIST_PATH=./IP_list.json

# Путь к логам
LOG_PATH=./logs

# Путь к резервным копиям
BACKUP_PATH=./backup

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker registry
DOCKER_REGISTRY=your-registry.com

# Docker image tags
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Автоматическая перезагрузка при изменении файлов
AUTO_RELOAD=true

# Генерация тестовых данных
GENERATE_TEST_DATA=false

# Включение debug панели
DEBUG_PANEL=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# SSL сертификаты
SSL_CERT_PATH=/etc/ssl/certs/shaplych.crt
SSL_KEY_PATH=/etc/ssl/private/shaplych.key

# Nginx конфигурация
NGINX_CONFIG_PATH=/etc/nginx/sites-available/shaplych

# Systemd сервисы
SYSTEMD_SERVICE_NAME=shaplych-monitoring

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Автоматическое резервное копирование
AUTO_BACKUP=true

# Интервал резервного копирования (в часах)
BACKUP_INTERVAL=24

# Количество дней хранения резервных копий
BACKUP_RETENTION_DAYS=30

# Облачное хранилище для резервных копий
BACKUP_S3_BUCKET=shaplych-backups
BACKUP_S3_REGION=us-east-1

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# Webhook URL для внешних систем
WEBHOOK_URL=https://your-system.com/webhook

# API ключи для внешних сервисов
EXTERNAL_API_KEY=your-external-api-key

# Slack webhook для уведомлений
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Включение функций
FEATURE_TELEGRAM_BOT=true
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_SLACK_INTEGRATION=false
FEATURE_WEBHOOK_INTEGRATION=false
FEATURE_ANALYTICS=true
FEATURE_EVENTS_MANAGEMENT=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Количество worker процессов
WORKERS=4

# Размер пула соединений к базе данных
DB_POOL_SIZE=10

# Таймаут соединения к базе данных (в секундах)
DB_TIMEOUT=30

# Размер кэша (в MB)
CACHE_SIZE=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Формат логов (json, text)
LOG_FORMAT=json

# Ротация логов
LOG_ROTATION=true

# Максимальный размер лог файла (в MB)
LOG_MAX_SIZE=10

# Количество файлов логов для хранения
LOG_BACKUP_COUNT=5

# =============================================================================
# NOTIFICATIONS CONFIGURATION
# =============================================================================

# Включение уведомлений
NOTIFICATIONS_ENABLED=true

# Типы уведомлений
NOTIFY_DEVICE_OFFLINE=true
NOTIFY_DEVICE_ONLINE=false
NOTIFY_HIGH_RESPONSE_TIME=true
NOTIFY_BOT_ERRORS=true

# Пороги для уведомлений
RESPONSE_TIME_THRESHOLD=1000  # миллисекунды
OFFLINE_THRESHOLD=300         # секунды

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Пользовательские настройки
CUSTOM_SETTING_1=value1
CUSTOM_SETTING_2=value2

# =============================================================================
# NOTES
# =============================================================================

# 1. Все значения в этом файле являются примерами
# 2. Обязательно измените SECRET_KEY в продакшене
# 3. Настройте TELEGRAM_TOKEN и TELEGRAM_CHAT_IDS
# 4. Для продакшена установите DEBUG=false
# 5. Настройте SSL сертификаты для HTTPS
# 6. Включите автоматическое резервное копирование
# 7. Настройте мониторинг и логирование
# 8. Используйте сильные пароли и токены
# 9. Регулярно обновляйте зависимости
# 10. Тестируйте изменения в dev окружении
